<br><br><br><br>
<div class="container">
    <div class="row text-center">
        <h2 class="h2"><%= @project.title %></h2>
    </div>
    <div class="row mt-80">
      <!-- Welcome Content -->
        <div class="col-md-7 mb-30">
          <h4>Description</h4>
          <div class="spacer-15"></div>
          <p><%= @project.description %></p>
          <p></p>
          <div class="spacer-15"></div>
          <%= link_to "Github Repo", @project.github, class: "btn-link-a", target: "_blank" %>
          <br>
          <%= link_to "See Application", @project.url, class: "btn-link-a", target: "_blank" %>
        </div>

        
        <!-- Accordian -->
        <div class="col-md-4 mb-30">
          <div class="accordion"
            <div class="accordion">
              <% @project.project_tags.each do |project_tag| %>
                <div class="accordion-section">
                    <h6 class="accordion-title"><%= project_tag.tag.name %></h6>
                    <div class="accordion-content defualt-hidden" style="display: none;">
                        <p><%= project_tag.notes %></p>
                    </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
        <!-- End Accordian -->
      </div>
    </div>
</div>